<div class="row question">
  <div class="small-8 columns">
    <h4><%= link_to question.title, question %></h4>
    <ul class="tag_list">
      <% question.tags.each do |tag| %>
        <li class="label secondary radius"><%= link_to tag.name, tag_path(tag) %></li>
      <% end %>
    </ul>
    <p>Asked by <%= question.user.name %></p>
  </div>
  <div class="small-2 columns text-center counter">
    <div class="count"><%= question.score %></div>
    <div>score</div>
  </div>
  <div class="small-2 columns text-center counter">
    <div class="count"><%= question.answers.count %></div>
    <div><%= question.answers.count == 1 ? "answer" : "answers" %></div>
  </div>
</div>