<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Question Box", root_path %></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <% if logged_in? %>
        <li class="active"><%= image_tag current_user.gravatar_url(size: 45) %></li>
        <li class="active"><%= link_to "Logged in as #{current_user.name}", user_path(current_user) %></li>
        <li><%= link_to "Log out", login_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "Log in", login_path %></li>
      <% end %>
    </ul>
    <!-- Left Nav Section -->
    <ul class="left">
      <li><%= link_to "All questions", questions_path %></li>
      <% if logged_in? %>
        <li><%= link_to "New question", new_question_path %></li>
      <% end %>
    </ul>
  </section>
</nav>
